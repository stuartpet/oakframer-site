# Ignore git repo
.git/
.gitignore

# Ignore bundler settings
.bundle

# Ignore environment files
.env*
.envrc

# Ignore Rails master/credentials keys (DO NOT ADD THEM)
config/master.key
config/credentials/*.key

# Ignore logs and temp files
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep
/tmp/pids/*
!/tmp/pids/.keep
/tmp/storage/*
!/tmp/storage/.keep

# Ignore storage (uploaded files in dev)
/storage/*
!/storage/.keep

# Ignore node_modules
/node_modules/

# âœ… Keep built assets for production
# Allow all files in builds and public/assets
!app/assets/builds
!app/assets/builds/**
!app/assets/builds/.keep

!public/assets
!public/assets/**
!public/assets/.keep

# Ignore GitHub/CI files
.github/
.kamal/
config/deploy*.yml

# Ignore devcontainer stuff
.devcontainer/

# Ignore Docker config files themselves
.dockerignore
Dockerfile
Dockerfile.dev
